<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="640.0" prefWidth="1024.0" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.first.RegistrazioneCtrlGrafico">

    <top>
        <!-- Barra del titolo TopPage -->
        <AnchorPane minHeight="-Infinity" minWidth="-Infinity" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" BorderPane.alignment="CENTER">
            <Button layoutX="14.0" layoutY="19.0" onAction="#onBackClick" text="Back" AnchorPane.leftAnchor="15.0" />
            <Label alignment="CENTER" layoutX="570.0" layoutY="40.0" stylesheets="@../styles/title.css" text="REGISTRAZIONE" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="10.0" />
        </AnchorPane>
    </top>

    <center>
        <AnchorPane BorderPane.alignment="CENTER">
            <HBox alignment="CENTER" layoutX="50.0" layoutY="150.0" spacing="150.0" AnchorPane.bottomAnchor="150.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="150.0">
                <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                    </rowConstraints>

                    <Label text="Username" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <Label text="Confirm password" GridPane.columnIndex="0" GridPane.rowIndex="3" />

                    <TextField fx:id="name" promptText="Username" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <TextField fx:id="email" promptText="Email" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <PasswordField fx:id="password" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <PasswordField fx:id="confPassword" promptText="Confirm password" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                </GridPane>

                <!-- Selezione dei generi musicali - CheckBox -->
                <VBox alignment="CENTER">
                    <Label text="Your favorite musical genres" AnchorPane.leftAnchor="180.0" AnchorPane.rightAnchor="180.0" AnchorPane.topAnchor="2.0">
                        <padding>
                            <Insets bottom="15.0" />
                        </padding>
                    </Label>
                    <HBox alignment="CENTER" spacing="25.0">
                        <VBox spacing="5.0">
                            <CheckBox fx:id="azione" mnemonicParsing="false" text="Azione" />
                            <CheckBox fx:id="biografico" mnemonicParsing="false" text="Biografico" />
                            <CheckBox fx:id="documentario" mnemonicParsing="false" text="Documentario" />
                            <CheckBox fx:id="fantastico" mnemonicParsing="false" text="Fantastico" />
                            <CheckBox fx:id="storico" mnemonicParsing="false" text="Storico" />
                            <CheckBox fx:id="horror" mnemonicParsing="false" text="Horror" />
                            <CheckBox fx:id="musica" mnemonicParsing="false" text="Musica" />
                            <CheckBox fx:id="musical" mnemonicParsing="false" text="Musical" />
                            <CheckBox fx:id="giallo" mnemonicParsing="false" text="Giallo" />
                        </VBox>

                        <VBox spacing="5.0">
                            <CheckBox fx:id="drammatico" mnemonicParsing="false" text="Drammatico" />
                            <CheckBox fx:id="giocoAPremiTelevisivo" mnemonicParsing="false" text="GiocoAPremiTelevisivo" />
                            <CheckBox fx:id="avventura" mnemonicParsing="false" text="Avventura" />
                            <CheckBox fx:id="noir" mnemonicParsing="false" text="Noir" />
                            <CheckBox fx:id="telegiornale" mnemonicParsing="false" text="Telegiornale" />
                            <CheckBox fx:id="reality" mnemonicParsing="false" text="Reality" />
                            <CheckBox fx:id="sentimentale" mnemonicParsing="false" text="Sentimentale" />
                            <CheckBox fx:id="fantascienza" mnemonicParsing="false" text="Fantascienza" />
                            <CheckBox fx:id="cortometraggio" mnemonicParsing="false" text="Cortometraggio" />
                        </VBox>

                        <VBox spacing="5.0">
                            <CheckBox fx:id="animazione" mnemonicParsing="false" text="Animazione" />
                            <CheckBox fx:id="commedia" mnemonicParsing="false" prefHeight="26.0" prefWidth="137.0" text="Commedia" />
                            <CheckBox fx:id="perFamiglie" mnemonicParsing="false" text="PerFamiglie" />
                            <CheckBox fx:id="poliziesco" mnemonicParsing="false" text="Poliziesco" />
                            <CheckBox fx:id="sportivo" mnemonicParsing="false" text="Sportivo" />
                            <CheckBox fx:id="talkShow" mnemonicParsing="false" text="TalkShow" />
                            <CheckBox fx:id="thriller" mnemonicParsing="false" text="Thriller" />
                            <CheckBox fx:id="guerra" mnemonicParsing="false" text="Guerra" />
                            <CheckBox fx:id="western" mnemonicParsing="false" text="Western" />
                        </VBox>

                        <padding>
                            <Insets left="25.0" right="25.0" />
                        </padding>
                    </HBox>
                </VBox>
            </HBox>
        </AnchorPane>
    </center>

    <bottom>
        <AnchorPane BorderPane.alignment="CENTER">
            <VBox alignment="CENTER" spacing="15.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                <Text fx:id="errorField" boundsType="LOGICAL_VERTICAL_CENTER" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" textOrigin="CENTER" visible="false" />
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onRegisterClick" stylesheets="@../styles/styles.css" text="Sign Up" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="25.0" />
                    </VBox.margin>
                </Button>
            </VBox>
        </AnchorPane>
    </bottom>

</BorderPane>
